    ES-HOT-DATA-n
    ----
    Data
  ]

}

package "ElasticSearch Warm Data" {
  node ESWARMDATA1 [
    ES-WARM-DATA-1
    ----
    Data
  ]
  node ESWARMDATA2 [
    ES-WARM-DATA-2
    ----
    Data
  ]
  node ESWARMDATA3 [
    ES-WARM-DATA-3
    ----
    Data
