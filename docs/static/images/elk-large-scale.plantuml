@startuml

package "ElasticSearch Masters/Ingest" {
  node ES1 [
    ES-1
    ----
    Master
    ----
    Ingest
  ]
  node ES2 [
    ES-2
    ----
    Master
    ----
    Ingest
  ]
  node ES3 [
    ES-3
    ----
    Master
    ----
    Ingest
  ]


  ES1<-->ES2
  ES2<-->ES3
  ES3<-->ES1

}

package "ElasticSearch Hot Data" {
  node ESHOTDATA1 [
    ES-HOT-DATA-1
