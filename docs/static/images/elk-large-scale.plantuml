  node ESWARMDATAN [
    ES-WARM-DATA-n
    ----
    Data
  ]

}

package "ElasticSearch Cold Data" {
  node ESCOLDDATA1 [
    ES-COLD-DATA-1
    ----
    Data
  ]
  node ESCOLDDATA2 [
    ES-COLD-DATA-2
    ----
    Data
  ]
  node ESCOLDDATA3 [
    ES-COLD-DATA-3
    ----
    Data
  ]
  node ESCOLDDATAN [
    ES-COLD-DATA-n
    ----
    Data
  ]

}

"ElasticSearch Masters/Ingest"<-->"ElasticSearch Hot Data"
"ElasticSearch Masters/Ingest"<-->"ElasticSearch Warm Data"
